<center><h1>All Recipes</h1></center>
<hr />

<% @recipes.each do |recipe| %>
    <div class = "row">
        <div class="col-md-2">
           <section class="chef_info center">
               <%= gravtar_for recipe.user, size: 100 %>
               <h5>Name<br /><%= recipe.user.firstName %>&nbsp;<%= recipe.user.lastName %></h5>
           </section> 
        </div>
        
        <div class="col-lg-8 well">
            <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= recipe.summary %></p>
        <p>
            <span class= "quiet"><small> <%= time_ago_in_words(recipe.created_at) %></small></span>
        </p>
        </div>
        
    </div>
<% end %>